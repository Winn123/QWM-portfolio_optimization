@Article{Han-Ge-2020,
  author         = {Han, Jingti and Ge, Zhipeng},
  date           = {2020-01},
  journaltitle   = {Expert systems with applications},
  title          = {Effect of dimensionality reduction on stock selection with cluster analysis in different market situations},
